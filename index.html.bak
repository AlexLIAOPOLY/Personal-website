    // 在DOM加载完成后初始化
    document.addEventListener('DOMContentLoaded', function() {
        // 获取所有需要切换语言的元素
        const langBtns = document.querySelectorAll('.lang-btn');
        
        // 为每个语言按钮添加点击事件
        langBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const lang = this.getAttribute('data-lang');
                changeLanguage(lang);
                
                // 更新活跃按钮
                langBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                // 保存语言选择到本地存储
                localStorage.setItem('preferredLanguage', lang);
            });
        });
        
        // 检查本地存储中的语言偏好
        const savedLang = localStorage.getItem('preferredLanguage');
        if (savedLang && (savedLang === 'en' || savedLang === 'zh')) {
            changeLanguage(savedLang);
            
            // 更新活跃按钮
            langBtns.forEach(b => {
                if (b.getAttribute('data-lang') === savedLang) {
                    b.classList.add('active');
                } else {
                    b.classList.remove('active');
                }
            });
        }
        
        // 如果用户浏览器语言是中文，则默认显示中文
        if (!savedLang) {
            const userLang = navigator.language || navigator.userLanguage;
            if (userLang.includes('zh')) {
                changeLanguage('zh');
                langBtns.forEach(b => {
                    if (b.getAttribute('data-lang') === 'zh') {
                        b.classList.add('active');
                    } else {
                        b.classList.remove('active');
                    }
                });
            }
        }
    });

    // 切换语言的函数
    function changeLanguage(lang) {
        const elements = document.querySelectorAll('[data-i18n]');
        
        elements.forEach(el => {
            const key = el.getAttribute('data-i18n');
            if (translations[lang] && translations[lang][key]) {
                if (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA') {
                    el.placeholder = translations[lang][key];
                } else {
                    el.textContent = translations[lang][key];
                }
            }
        });
        
        // 针对特殊元素的处理，比如按钮内容、标题等
        updateSpecialElements(lang);
    }

    // 更新特殊元素的函数
    function updateSpecialElements(lang) {
        // 更新导航菜单
        const navItems = document.querySelectorAll('nav ul li a');
        navItems.forEach(item => {
            const href = item.getAttribute('href').substring(1);
            if (translations[lang][href]) {
                item.textContent = translations[lang][href];
            }
        });
        
        // 更新页脚版权信息
        const copyrightYear = document.getElementById('current-year');
        if (copyrightYear) {
            const yearText = copyrightYear.textContent;
            document.querySelector('footer p').innerHTML = 
                '&copy; <span id="current-year">' + yearText + '</span> Liao Wang. ' + 
                translations[lang]["copyright"];
        }
        
        // 更新标题
        document.querySelectorAll('section h2').forEach(heading => {
            const sectionId = heading.closest('section').id;
            if (translations[lang][sectionId + "-title"]) {
                heading.textContent = translations[lang][sectionId + "-title"];
            }
        });
        
        // 更新按钮文字
        document.querySelectorAll('.btn.primary-btn').forEach(btn => {
            if (btn.textContent.includes('Contact')) {
                btn.textContent = translations[lang]["contact-me"];
            } else if (btn.textContent.includes('Send')) {
                btn.textContent = translations[lang]["send"];
            }
        });
        
        document.querySelectorAll('.btn.secondary-btn').forEach(btn => {
            if (btn.textContent.includes('Download')) {
                btn.textContent = translations[lang]["download-cv"];
            }
        });
    }
    </script>
